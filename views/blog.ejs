<!DOCTYPE html>
<html lang="en">
<head> 
    <%- include('./partials/head') %>

    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav'); %>
      <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" width="500">
        <p><%= blog.body %></p>
      </div>

      <div class="container mt-4">
          <img src="<%= blog.createdBy.profileImageURL %>" width="50"> <%= blog.createdBy.fullName %>
      </div>

      <div class="container mt-3">
        <h5>Comments (<%= comments.length %>)</h5>
        <% if (locals.user) { %>
          <form action="/blog/comment/<%= blog._id %>" method="post" >
            <div class="container mt-4">
                
                <div class="mb-3">
                    <input type="text" class="form-control" name ="content" id="content" placeholder="Enter your comment">
                </div>               
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>   
            </div>
        </form>
        <% } %>
        
      </div>
      <div class="container">
        <div class="mt-3">
          <% comments.forEach(comment => { %>
          <div>
              <img src="<%= comment.createdBy.profileImageURL %>" width="30"><%= comment.createdBy.fullName %>:
                <pre><%= comment.content %></pre>  
          </div>
          <% }) %>
        </div>
    </div>
    <%- include('./partials/script'); %>
    
</body>
</html>